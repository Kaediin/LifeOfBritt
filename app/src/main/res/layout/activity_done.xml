<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/gefeliciteerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gefeliciteerd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="220dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tijdText"
            android:text="@string/totale_tijd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gefeliciteerd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/totalTimeTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tijdText"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    <Button
        android:id="@+id/opnieuw_spelen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalTimeTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="@string/opnieuw_beginnen"
        android:textColor="@color/black"
        android:elevation="20dp"
        android:padding="10dp" />

</RelativeLayout>